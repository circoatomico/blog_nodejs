<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>tinymce.init({selector:'textarea', language: 'pt_BR',  plugins: ['advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons']});</script>

<script>    
</script>

<div class="container">
    <hr>
    <div class="card">

        <div class="card-header">
            <h2>Editar Artigo</h2> 
        </div>

        <div class="card-body">
            
            <form action="/admin/articles/update" method="POST">
                <label>Title</label>
                <input class="form-control" type="text" value="<%=article.title%>" name="title" placeholder="Title">
                <input class="form-control" type="hidden" value="<%=article.id%>" name="id">
                <br>
                <textarea name="body" class="form-control" cols="30" rows="10" placeholder="Write Here" >
                    <%= article.body %>
                </textarea>
                <br>    

                <label>Category</label>
                <select name="category" class="form-control" value="<%=article.categoryId%>">
                    <% categories.forEach((category) => { %>
                        <% if (category.id == article.categoryId) { %>
                            <option selected value="<%= category.id %>"> <%= category.title %> </option>
                        <% } else { %>
                            <option value="<%= category.id %>"> <%= category.title %> </option>
                        <% } %>
                    <% }) %>
                </select>
                <br>

                <button type="submit" class="btn btn-success">Atualizar</button>
            </form>
            
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>