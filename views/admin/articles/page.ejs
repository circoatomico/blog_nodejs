<%- include('../../partials/header.ejs') %>

<%- include('../../partials/homeNavbar.ejs') %>

<body>    
    <div class="container">

        <hr> 

        <% result.articles.rows.forEach(article => { %>
             
            <div class="card">

                <div class="card-header">
                    <h2><%=article.title%></h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%=article.slug%>">Ler Artigo</a>
                </div>
            </div>

            <br>
        <% }) %>

        <div class="row ">
            <div class="col col-12"> 
                <% if ( parseInt(result.page) > 1) { %>
                    <a style="float: left; text-decoration: none;" href="/articles/page/<%= parseInt(result.page) - 1%>"><- Prev</a>
                <% } %>
                <% if (result.next) { %>
                    <a style="float: right; text-decoration: none;" href="/articles/page/<%= parseInt(result.page) + 1%>">Next -></a>
                <% } %>
            </div>
        </div>

    </div>

</body>

<%- include('../../partials/footer.ejs') %>